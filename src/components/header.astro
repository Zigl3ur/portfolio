---
import Listener from "./Listener";
import type { MusicJsonType } from "../types";
import { GET } from "../pages/api/music";

const response = await GET();
const musicData: MusicJsonType = await response.json();
---

<header class="flex border-b border-dashed border-gray p-4 h-20 sm:h-16">
  <div
    class="flex flex-col text-center sm:flex-row items-center justify-center sm:justify-between w-full"
  >
    <h1 class="font-mono text-lg">Eden Douru</h1>
    <Listener initialData={musicData} client:load />
  </div>
</header>
